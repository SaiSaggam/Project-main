<div class="panel panel-info">
    <div class="panel-heading panel-orange" ng-click="toggleGroupOpen()" name="GROUPSUMMARY_FT">
        <h3 class="panel-title entire-panel-heading ">Group Information <i ng-if="!isGroupOpenPanel" class="fa fa-plus float-right"></i><i ng-if="isGroupOpenPanel" class="fa fa-minus float-right"></i>
        </h3>
    </div>
    <div class="panel-body" slide-toggle="isGroupOpenPanel" style="overflow-x:auto;">
        <table class="table">
            <thead>
            <tr>
                <th>Group No</th>
                <th>Size Definition</th>
                <th>Employee Counts</th>
                <th>Address</th>
                <th>Telephone</th>

            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{grpDetails.groupNo}}</td>
                <td>{{grpDetails.sizeDef}}</td>
                <td>{{grpDetails.employeeCounts}}</td>
                <td>{{grpDetails.address}}</td>
                <td>{{grpDetails.tel}}</td>

            </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="padding-top-10"></div>
